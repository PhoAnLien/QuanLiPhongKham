@using Microsoft.AspNetCore.Identity
@inject SignInManager<DoAnLTW.Models.ApplicationUser> SignInManager
@inject UserManager<DoAnLTW.Models.ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Quản lý">Xin chào @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
        <form class="form-inline" asp-controller="Account" asp-action="Logout" asp-route-returnUrl="/" method="post">
            @Html.AntiForgeryToken()
            <button type="submit" class="nav-link btn btn-link text-dark">Đăng xuất</button>
        </form>
    </li>
}
