@model DoAnLTW.ViewModels.DoctorDashboardViewModel
@{
    ViewData["Title"] = "Bảng điều khiển Bác sĩ";
}

<style>
    .kpi-card {
        border-left: 5px solid;
    }
    .border-primary { border-color: #0d6efd !important; }
    .border-success { border-color: #198754 !important; }
    .border-warning { border-color: #ffc107 !important; }
</style>

<div class="container-fluid py-4">
    <h1 class="display-6 mb-4"><i class="bi bi-person-workspace me-3"></i>@ViewData["Title"]</h1>

    <!-- KPI Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-4">
            <div class="card shadow-sm kpi-card border-primary">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-calendar-day fs-1 text-primary me-3"></i>
                        <div>
                            <h5 class="card-title">Lịch hẹn Hôm nay</h5>
                            <p class="card-text fs-4 fw-bold">@Model.Appointments.Count(a => a.AppointmentDate.Date == DateTime.Today)</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm kpi-card border-success">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-calendar-check fs-1 text-success me-3"></i>
                        <div>
                            <h5 class="card-title">Lịch hẹn Sắp tới</h5>
                            <p class="card-text fs-4 fw-bold">@Model.Appointments.Count(a => a.AppointmentDate.Date > DateTime.Today)</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm kpi-card border-warning">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-clipboard2-check fs-1 text-warning me-3"></i>
                        <div>
                            <h5 class="card-title">Lịch hẹn Hoàn thành</h5>
                            <p class="card-text fs-4 fw-bold">@Model.Appointments.Count(a => a.Status == AppointmentStatus.Completed)</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Calendar and Appointments Table -->
    <div class="row g-4">
        <!-- Calendar -->
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-calendar-week me-2"></i>Lịch làm việc</h5>
                </div>
                <div class="card-body">
                    <div id="calendar"></div>
                </div>
            </div>
        </div>

        <!-- Appointments Table -->
        <div class="col-lg-4">
             <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-list-task me-2"></i>Danh sách Lịch hẹn</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive" style="max-height: 500px;">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Bệnh nhân</th>
                                    <th>Ngày giờ</th>
                                    <th class="text-center">Hành động</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Appointments != null && Model.Appointments.Any())
                                {
                                    @foreach (var app in Model.Appointments.OrderByDescending(a => a.AppointmentDate))
                                    {
                                        <tr>
                                            <td>@app.Patient?.FullName</td>
                                            <td>@app.AppointmentDate.ToString("HH:mm dd/MM")</td>
                                            <td class="text-center">
                                                <a asp-controller="Appointment" asp-action="Prescribe" asp-route-id="@app.Id" class="btn btn-outline-primary btn-sm" title="Khám & Kê toa">
                                                    <i class="bi bi-pencil-square"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="3" class="text-center py-4">Chưa có lịch hẹn.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/main.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/main.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/locales/vi.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var calendarEl = document.getElementById('calendar');
            var calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'dayGridMonth',
                locale: 'vi',
                headerToolbar: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'dayGridMonth,timeGridWeek,listWeek'
                },
                events: '@Url.Action("GetDoctorAppointmentsJson")',
                eventClick: function(info) {
                    info.jsEvent.preventDefault(); 
                    if (info.event.url) {
                        window.open(info.event.url, "_blank");
                    }
                }
            });
            calendar.render();
        });
    </script>
} 