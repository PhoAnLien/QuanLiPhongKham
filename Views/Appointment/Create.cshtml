@model DoAnLTW.Models.Appointment

@{
    ViewData["Title"] = "Đặt lịch hẹn";
    var hours = new List<string>();
    for (int h = 8; h <= 16; h++)
    {
        hours.Add($"{h:D2}:00");
        hours.Add($"{h:D2}:30");
    }
    hours.Add("17:00");
}

<div class="container mt-4">
    <h2>Đặt lịch hẹn</h2>
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="alert alert-info">
        Sau khi bạn đặt lịch, admin sẽ duyệt và phân bác sĩ phù hợp theo giờ làm việc.
    </div>
    <div class="row">
        <div class="col-md-8">
            <form asp-action="Create" method="post">
                <div class="form-group mb-3">
                    <label class="control-label">Ngày khám</label>
                    <input name="date" type="date" class="form-control" required min="@DateTime.Now.ToString("yyyy-MM-dd")" />
                </div>
                <div class="form-group mb-3">
                    <label class="control-label">Giờ khám</label>
                    <select name="time" class="form-select" required>
                        <option value="">-- Chọn giờ --</option>
                        @foreach (var hour in hours)
                        {
                            <option value="@hour">@hour</option>
                        }
                    </select>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Reason" class="control-label">Lý do khám</label>
                    <textarea asp-for="Reason" class="form-control" rows="3" required></textarea>
                    <span asp-validation-for="Reason" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-outline-dark">Đặt lịch</button>
                    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 