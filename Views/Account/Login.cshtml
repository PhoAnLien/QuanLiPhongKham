@model DoAnLTW.Models.ApplicationUser

@{
    ViewData["Title"] = "Đăng nhập";
}

<style>
    .login-container {
        max-width: 450px;
        margin: 5% auto;
    }
    .card-header-custom {
        background-color: #0d6efd;
        color: white;
    }
    .input-group-text {
        width: 42px;
        justify-content: center;
    }
</style>

<div class="login-container">
    <div class="card shadow-lg border-0 rounded-lg">
        <div class="card-header card-header-custom text-center">
            <h2 class="my-3"><i class="bi bi-box-arrow-in-right me-2"></i>@ViewData["Title"]</h2>
        </div>
        <div class="card-body p-4">
            <form asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                
                <p class="text-center text-muted mb-4">Chào mừng bạn quay trở lại!</p>

                <div class="input-group mb-3">
                    <span class="input-group-text"><i class="bi bi-envelope-fill"></i></span>
                    <input asp-for="Email" class="form-control" placeholder="Nhập địa chỉ email" required />
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>

                <div class="input-group mb-3 mt-3">
                    <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                    <input type="password" name="Password" class="form-control" placeholder="Nhập mật khẩu" required />
                </div>

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="rememberMe" name="RememberMe" />
                        <label class="form-check-label" for="rememberMe">Ghi nhớ tôi</label>
                    </div>
                    <a asp-action="ForgotPassword" class="small text-decoration-none">Quên mật khẩu?</a>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg"><i class="bi bi-door-open-fill me-2"></i>Đăng nhập</button>
                </div>
            </form>
        </div>
        <div class="card-footer text-center py-3">
            <div class="small">Chưa có tài khoản? <a asp-action="Register">Đăng ký ngay</a></div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}